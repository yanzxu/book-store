#!groovy

pipeline {
    // agent {
    //     node {
    //         label 'node02'
    //     }
    // }

    agent any

    environment {
        IMAGE_TAG="${env.BUILD_ID}"
        SERVICE_NAME="user-service"
		DOCKERHUB_CREDENTIALS=credentials('40759b21-2fb6-4660-aead-57af75ea6e85')
	}

    stages {
        stage('checkout') {
            // 1. add git config in jenkins;
            // 2. when build in new node, should add ssh key in github;
            steps {
                echo '********* checkout start ********'
                echo pwd()
                git branch:'dev-test-service',credentialsId:'aaa16faa-d48c-49a3-ad3d-9497ce08fee0',url:'git@github.com:yanzxu/book-store.git'
                echo '********* checkout end ********'
            }
        }
        
        stage('build jar') {
            steps {
                echo '********* buildJar start ********'
                sh './gradlew clean :user-service:bootJar'
                echo '********* buildJar start ********'
            }
        }

        stage('build image') {
            steps {
                dir('user-service') {
                    echo '********* buildImage start ********'
                    echo pwd()
                    sh 'docker build -t yanzxu/$SERVICE_NAME:$IMAGE_TAG .'
                    echo '********* buildImage end ********'
                }
            }
        }

        stage('push image') {
            steps {
                echo '********* pushImage start ********'
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                echo '********* login dockerhub successfully ********'
                sh 'docker push yanzxu/$SERVICE_NAME:$IMAGE_TAG'
                echo '********* push image successfully ********'
            }
        }

        stages('deploy') {
            steps {
                dir('deployment/k8s') {
                    echo '********* deploy start ********'
                    sh './update-deploy-image.sh $IMAGE_TAG'
                    echo '********* deploy end ********'

                }
            }
        }
    }
}
